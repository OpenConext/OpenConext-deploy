
server {
    listen       {{ nginx_ipv4_addresses.grouper }}:80;
    server_name  grouper.{{ base_domain }};

    return       301 https://grouper.{{ base_domain }}$request_uri;
}

server {
  listen       {{ nginx_ipv4_addresses.grouper }}:443 ssl spdy;
  server_name  grouper.{{ base_domain }};

  ssl                  on;
  ssl_certificate      {{ tls.cert_path }}/{{ grouper.crt_name }};
  ssl_certificate_key  {{ tls.cert_private_path }}/{{ grouper.key_name }};

  ssl_session_timeout  60m;

	ssl_ciphers ECDHE-RSA-AES128-SHA256:AES128-GCM-SHA256:RC4:HIGH:!MD5:!aNULL:!EDH;
  ssl_prefer_server_ciphers on;

  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_session_cache shared:SSL:10m;
  ssl_ecdh_curve secp384r1;
  ssl_dhparam {{ tls_dh_param_file }};

  location / {
      proxy_pass http://{{ nginx_backend_ip }}:{{ loadbalancing.grouper.port }}/;
      proxy_http_version 1.1;
      proxy_redirect off;
      proxy_set_header Host $http_host;
      proxy_set_header X-Forwarded-Ssl on;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}

