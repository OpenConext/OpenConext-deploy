{{ rsyslog_dir }}/log_logins/{{ item.name }}/stepup-authentication.log
{
    missingok
    daily
    rotate 180
    sharedscripts
    dateext
    dateyesterday
    compress
    delaycompress
    create 0640 root {{ rsyslog_read_group }}
    postrotate
      /usr/local/sbin/parse_stepupauth_to_mysql_{{ item.name }}.py > /dev/null
      systemctl kill -s HUP rsyslog.service
    endscript
}
