<?xml version="1.0" encoding="UTF-8"?>
<configuration>
   <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
      <syslogHost>{{ rsyslog_host }}</syslogHost>
      <facility>DAEMON</facility>
      <suffixPattern>PDPMAIN: [%thread] %logger %msg</suffixPattern>
   </appender>
   <appender name="SYSLOG-DECISIONS" class="ch.qos.logback.classic.net.SyslogAppender">
      <syslogHost>{{ rsyslog_host }}</syslogHost>
      <facility>DAEMON</facility>
      <suffixPattern>PDPANALYTICS: %msg</suffixPattern>
   </appender>
   <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <file>/var/log/pdp/pdp.log</file>
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
         <!-- daily rollover -->
         <fileNamePattern>/var/log/pdp/pdp-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
         <maxHistory>"{{ logback_max_history }}"</maxHistory>
      </rollingPolicy>
      <encoder>
         <pattern>%d{ISO8601} %5p [%t] %logger{40}:%L - %m%n</pattern>
      </encoder>
   </appender>
   <logger name="analytics" level="INFO" additivity="false">
      <appender-ref ref="SYSLOG-DECISIONS" />
   </logger>
   <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
      <smtpHost>{{ smtp_server }}</smtpHost>
      <from>{{ noreply_email }}</from>
      <to>{{ error_mail_to }}</to>
      <subject>{{ error_subject_prefix }}Unexpected error pdp</subject>
      <layout class="ch.qos.logback.classic.html.HTMLLayout" />
      <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
         <level>ERROR</level>
      </filter>
   </appender>
   <logger name="pdp" level="DEBUG" />
   <root level="WARN">
      <appender-ref ref="EMAIL" />
      <appender-ref ref="FILE" />
      <appender-ref ref="SYSLOG" />
   </root>
</configuration>
